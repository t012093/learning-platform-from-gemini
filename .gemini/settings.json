{
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--project-from-cwd"
      ],
      "env": {
        "PATH": "/usr/local/bin:/usr/bin:/bin:/home/codespace/.local/bin"
      }
    }
  }
}
